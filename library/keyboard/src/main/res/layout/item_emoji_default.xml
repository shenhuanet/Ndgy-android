<?xml version="1.0" encoding="utf-8"?>
<com.shenhua.commonlibs.widget.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:gravity="center">

    <LinearLayout
        android:layout_width="@dimen/emoji_item_size"
        android:layout_height="@dimen/emoji_item_size"
        android:layout_gravity="center"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_emoji"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_keyborad_emoji_add" />

    </LinearLayout>

</com.shenhua.commonlibs.widget.SquareLayout>