<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/emoji_group_height"
    android:layout_height="@dimen/emoji_group_height"
    android:background="?attr/selectableItemBackgroundBorderless">

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="#CCCCCC" />

    <ImageView
        android:id="@+id/iv_emoji_group_icon"
        android:layout_width="@dimen/emoji_group_icon_size"
        android:layout_height="@dimen/emoji_group_icon_size"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_keyborad_emoji_add" />

</RelativeLayout>