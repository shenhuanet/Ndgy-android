<resources>

    <style name="Boxing.PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/boxing_fade_in</item>
        <item name="android:windowExitAnimation">@anim/boxing_fade_out</item>
    </style>

    <style name="BoxingStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="BoxingToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:paddingTop">@dimen/common_toolbar_padding_top</item>
        <item name="title">@null</item>
    </style>

</resources>
