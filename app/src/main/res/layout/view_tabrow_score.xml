<?xml version="1.0" encoding="utf-8"?>
<com.shenhua.commonlibs.widget.SquareLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/list_tab_iv"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:contentDescription="@string/imgdec" />

    <TextView
        android:id="@+id/list_tab_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_tab_iv"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:maxLines="1" />

</com.shenhua.commonlibs.widget.SquareLinearLayout>