<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_take_photo"
        style="@style/ShareViewTextStytle"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_share_top_selector"
        android:text="拍照" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#E8E8E8" />

    <TextView
        android:id="@+id/tv_pick_photo"
        style="@style/ShareViewTextStytle"
        android:background="@drawable/shape_share_bottom_selector"
        android:text="从相册选择" />

    <TextView
        android:id="@+id/tv_cancel"
        style="@style/ShareViewTextStytle"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_share_one_selector"
        android:text="取消" />

</LinearLayout>