<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/layout_score_root_style">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="普通话水平" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请至少输入您的姓名、准考证号及证件编号三项中的任意两项" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_zkzh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextAppearance="@style/ScoreTextInputLayoutHintTextStyle">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_zkzh"
            style="@style/ScoreTextInputEditTextStyle.ZhunKaoZheng"
            android:hint="请输入15位准考证号"
            android:inputType="number"
            android:maxLength="15" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextAppearance="@style/ScoreTextInputLayoutHintTextStyle">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_name"
            style="@style/ScoreEditTextStyle.XingMing" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_zjh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextAppearance="@style/ScoreTextInputLayoutHintTextStyle">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_zjh"
            style="@style/ScoreTextInputEditTextStyle"
            android:hint="请输入13位证件编号"
            android:inputType="number"
            android:maxLength="13" />

    </android.support.design.widget.TextInputLayout>

    <Button style="@style/ButtonStyle.ScoreQuery" />

</LinearLayout>