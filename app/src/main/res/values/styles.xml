<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <style name="AppThemeFitsSystemWindows" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="AppWelcome" parent="AppTheme.Base">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="ToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:id">@id/toolbar_title</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/toolbar_title_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ToolbarTitle.Center">
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="ButtonStyle.Primary" parent="ButtonStyle">
        <item name="android:background">@drawable/bg_button_primary_selector</item>
    </style>

    <style name="ButtonStyle.ScoreQuery" parent="ButtonStyle">
        <item name="android:id">@id/btn_query</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:text">查询</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:background">@drawable/bg_button_light_selector</item>
    </style>

    <style name="ScoreTextInputLayoutHintTextStyle">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="ScoreTextInputEditTextStyle" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/colorGreen</item>
        <item name="android:textColorHint">@color/colorEnabled</item>
        <item name="android:background">@drawable/rounded_edit_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ScoreTextInputEditTextStyle.Kaodian" parent="ScoreTextInputEditTextStyle">
        <item name="android:inputType">number</item>
    </style>

    <style name="ScoreEditTextStyle.XingMing" parent="ScoreTextInputEditTextStyle">
        <item name="android:id">@id/et_name</item>
        <item name="android:hint">请输入姓名</item>
    </style>

    <style name="ScoreTextInputEditTextStyle.ZhunKaoZheng" parent="ScoreTextInputEditTextStyle">
        <item name="android:hint">请输入准考证号</item>
        <item name="android:id">@id/et_zkzh</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="ScoreTextInputEditTextStyle.ShenFenZheng" parent="ScoreTextInputEditTextStyle">
        <item name="android:id">@id/et_sfz</item>
        <item name="android:inputType">number</item>
        <item name="android:digits">0123456789xX</item>
        <item name="android:hint">请输入证件号</item>
        <item name="android:maxLength">18</item>
    </style>

    <style name="ScoreTextInputEditTextStyle.Yzm" parent="ScoreTextInputEditTextStyle">
        <item name="android:id">@id/et_yzm</item>
        <item name="android:hint">请输入验证码</item>
        <item name="android:maxLength">4</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:animationCache">true</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:background">@drawable/spinner_selector</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="VerifyCodeStyle">
        <item name="android:id">@id/iv_score_yzm</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:src">@drawable/ic_score_yzm</item>
    </style>

    <style name="LayoutScoreRootStyle">
        <item name="android:id">@id/layout_score_root</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="EditSignStyle" parent="Base.Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="DialogMessage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="UserZoneNumStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">-</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="DialogTextActionStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/bg_dialog_textcolor_selector</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="EditDialogStyle">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="ShareViewTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="ActionLabelTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">16dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ScoreTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="CircleToolStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="CircleToolTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ToolbarRadioButton">
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="android:minHeight">33dp</item>
        <item name="android:minWidth">70dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="ItemExamScoreStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="ItemExamScoreStyle.Small">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="ItemExamScoreStyle.Theme">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="UserAccountTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="divider">@drawable/bg_divider_gray_vertical</item>
        <item name="showDividers">middle|end</item>
    </style>

    <style name="UserAccountTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/colorText2</item>
    </style>

    <style name="UserAccountInfoLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="UserAccountInfoLableText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="UserAccountInfoText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:drawableRight">@drawable/ic_arrow_right</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:maxLength">20</item>
    </style>

</resources>